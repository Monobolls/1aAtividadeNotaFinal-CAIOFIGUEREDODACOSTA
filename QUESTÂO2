<body>
    <div class="container">
        <h1>Soma de Dois Números</h1>
        
        <input type="number" id="num1" placeholder="Primeiro número" value="0">
        <input type="number" id="num2" placeholder="Segundo número" value="0">
        
        <button onclick="somar()">Somar</button>
        
        <p id="resultado">Aguardando soma...</p>
    </div>

    <script>
        function somar() {
            const numero1 = parseFloat(document.getElementById('num1').value);
            const numero2 = parseFloat(document.getElementById('num2').value);
            
            if (isNaN(numero1) || isNaN(numero2)) {
                document.getElementById('resultado').textContent = "Por favor, insira números válidos.";
                return;
            }

            const soma = numero1 + numero2;
        
            document.getElementById('resultado').textContent = `A soma é: ${soma.toFixed(2)}`;
        }
    </script>
</body>
